# FP Digital Marketing Suite - Environment Configuration

# Application
APP_NAME="FP Digital Marketing Suite"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://yoursite.com
APP_TIMEZONE=UTC

# Database
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=fpdms
DB_USERNAME=root
DB_PASSWORD=
DB_PREFIX=fpdms_
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Security
APP_KEY=
ENCRYPTION_KEY=
SESSION_SECRET=

# SMTP / Email
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"

# Storage
STORAGE_PATH=/var/www/storage
UPLOAD_PATH=/var/www/storage/uploads
PDF_PATH=/var/www/storage/pdfs
LOG_PATH=/var/www/storage/logs

# API Keys
TICK_API_KEY=
QA_API_KEY=

# Cron/Queue
QUEUE_ENABLED=true
CRON_INTERVAL=300

# Anomaly Detection
ANOMALY_ENABLED=true
ANOMALY_WINDOW_DAYS=28

# Notifications
SLACK_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=
TWILIO_TO=

# Session
SESSION_LIFETIME=120
SESSION_DRIVER=file

# Logging
LOG_CHANNEL=daily
LOG_LEVEL=info
