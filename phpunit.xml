<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.5/phpunit.xsd"
         bootstrap="tests/bootstrap.php"
         colors="true"
         failOnWarning="false"
         failOnRisky="false"
         beStrictAboutOutputDuringTests="false"
         cacheDirectory=".phpunit.cache">
    <testsuites>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory suffix=".php">src</directory>
        </include>
        <exclude>
            <directory>src/Support/Wp.refactored.php</directory>
            <directory>src/Admin/Pages/AnomaliesPage.refactored.php</directory>
            <directory>src/Admin/Pages/DataSourcesPage.refactored.php</directory>
        </exclude>
    </source>
</phpunit>
