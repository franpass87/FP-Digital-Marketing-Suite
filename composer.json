{
  "name": "fp/digital-marketing-suite",
  "description": "Automates marketing performance reporting, anomaly detection, and multi-channel alerts - standalone application.",
  "homepage": "https://francescopasseri.com",
  "type": "project",
  "authors": [
    {
      "name": "Francesco Passeri",
      "email": "info@francescopasseri.com",
      "homepage": "https://francescopasseri.com",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/francescopasseri/FP-Digital-Marketing-Suite/issues",
    "source": "https://github.com/francescopasseri/FP-Digital-Marketing-Suite"
  },
  "require": {
    "php": ">=8.1",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "mpdf/mpdf": "^8.2",
    "slim/slim": "^4.12",
    "slim/psr7": "^1.6",
    "php-di/php-di": "^7.0",
    "vlucas/phpdotenv": "^5.5",
    "symfony/console": "^6.3",
    "monolog/monolog": "^3.5",
    "phpmailer/phpmailer": "^6.9",
    "ramsey/uuid": "^4.7",
    "nesbot/carbon": "^2.72",
    "guzzlehttp/guzzle": "^7.8",
    "firebase/php-jwt": "^6.9",
    "dragonmantank/cron-expression": "^3.3"
  },
  "autoload": {
    "psr-4": {
      "FP\\DMS\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.11",
    "friendsofphp/php-cs-fixer": "^3.58",
    "squizlabs/php_codesniffer": "^3.10"
  },
  "config": {
    "platform": {
      "php": "8.2.0"
    },
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "build": [
      "rm -rf vendor",
      "@composer install --no-dev --prefer-dist --no-interaction --optimize-autoloader",
      "composer dump-autoload -o --classmap-authoritative"
    ],
    "post-install-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "serve": "php -S localhost:8080 -t public",
    "db:migrate": "php cli.php db:migrate",
    "sync:author": "node tools/sync-author-metadata.js --apply=true",
    "sync:docs": "node tools/sync-author-metadata.js --docs --apply=true",
    "changelog:from-git": "npx conventional-changelog -p angular -i CHANGELOG.md -s || true"
  }
}
