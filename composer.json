{
  "name": "fp/digital-marketing-suite",
  "description": "Automates marketing performance reporting, anomaly detection, and multi-channel alerts for private WordPress operations.",
  "homepage": "https://francescopasseri.com",
  "type": "wordpress-plugin",
  "authors": [
    {
      "name": "Francesco Passeri",
      "email": "info@francescopasseri.com",
      "homepage": "https://francescopasseri.com",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/francescopasseri/FP-Digital-Marketing-Suite/issues",
    "source": "https://github.com/francescopasseri/FP-Digital-Marketing-Suite"
  },
  "require": {
    "php": ">=8.1",
    "mpdf/mpdf": "^8.2"
  },
  "autoload": {
    "psr-4": {
      "FP\\\\DMS\\\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.11",
    "friendsofphp/php-cs-fixer": "^3.58",
    "squizlabs/php_codesniffer": "^3.10"
  },
  "config": {
    "platform": {
      "php": "8.2.0"
    },
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "build": [
      "rm -rf vendor",
      "@composer install --no-dev --prefer-dist --no-interaction --optimize-autoloader",
      "composer dump-autoload -o --classmap-authoritative"
    ],
    "sync:author": "node tools/sync-author-metadata.js --apply=true",
    "sync:docs": "node tools/sync-author-metadata.js --docs --apply=true",
    "changelog:from-git": "conventional-changelog -p angular -i CHANGELOG.md -s || true"
  }
}
